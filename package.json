{
  "name": "ghost-writer",
  "version": "1.0.0",
  "main": "./dist-electron/main.js",
  "description": "Ghost Writer is a meeting notes app that uses AI to generate notes from your meetings.",
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "dev": "vite",
    "build": "npm run clean && tsc && vite build",
    "preview": "vite preview",
    "postinstall": "cross-env SHARP_IGNORE_GLOBAL_LIBVIPS=1 npm rebuild sharp",
    "electron:dev": "set ELECTRON_RUN_AS_NODE=&& tsc -p electron/tsconfig.json && cross-env NODE_ENV=development electron dist-electron/main.js",
    "electron:build": "set ELECTRON_RUN_AS_NODE=&& tsc -p electron/tsconfig.json && cross-env NODE_ENV=production electron .",
    "app:dev": "concurrently \"npm run dev -- --port 5180\" \"wait-on http://localhost:5180 && npm run electron:dev\"",
    "app:build": "npm run build && tsc -p electron/tsconfig.json && electron-builder",
    "watch": "tsc -p electron/tsconfig.json --watch",
    "start": "npm run app:dev",
    "dist": "npm run app:build",
    "build:native": "cd native-module && napi build --platform --release"
  },
  "build": {
    "appId": "com.electron.ghost-writer",
    "productName": "Ghost Writer",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "node_modules/**/*",
      "!**/native-module/target/**",
      "!**/native-module/src/**",
      "!**/native-module/.cargo/**"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/win/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Sasidhar-7302",
        "repo": "Ghost_Writer",
        "releaseType": "release"
      }
    ]
  },
  "keywords": [],
  "author": "Ghost Writer Team",
  "license": "ISC",
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@napi-rs/cli": "^3.5.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/color": "^4.2.0",
    "@types/diff": "^6.0.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/screenshot-desktop": "^1.12.3",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@bany/curl-to-json": "^1.2.10",
    "@google-cloud/speech": "^7.2.1",
    "@google/genai": "^0.12.0",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@types/three": "^0.182.0",
    "axios": "^1.7.7",
    "better-sqlite3": "12.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "diff": "^7.0.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3",
    "form-data": "^4.0.1",
    "framer-motion": "^12.29.2",
    "groq-sdk": "^0.37.0",
    "jspdf": "^4.0.0",
    "katex": "^0.16.27",
    "lucide-react": "^0.460.0",
    "mammoth": "^1.11.0",
    "openai": "^6.19.0",
    "pdf-parse": "^2.4.5",
    "react": "^18.3.1",
    "react-code-blocks": "^0.1.6",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-markdown": "^10.1.0",
    "react-query": "^3.39.3",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.5.4",
    "tap": "^21.5.0",
    "tesseract.js": "^5.0.5",
    "three": "^0.182.0",
    "uuid": "^11.0.3",
    "ws": "^8.19.0"
  },
  "optionalDependencies": {
    "ghost-writer-audio": "file:./native-module"
  }
}